int pairs(int k, vector<int> arr) {
    sort(arr.begin(), arr.end());

    int result = 0;

    for(int i = 0; i < arr.size(); i++) {
        for(int j = i+1; j < arr.size(); j++) {
            if(arr[j] - arr[i] == k){
                result++;
            }
            if(arr[j] - arr[i] > k){
                break;
            }
        }
    }

    return result;
}
